{
  "name": "hls-parser",
  "version": "0.2.0",
  "description": "A simple library to read/write HLS playlists",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "build": "rm -fR ./dist; webpack --mode production",
    "test": "npm run lint && npm run build && nsp check && ava --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuu/hls-parser.git"
  },
  "keywords": [
    "HLS",
    "media",
    "video",
    "audio",
    "streaming"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuu/hls-parser/issues"
  },
  "homepage": "https://github.com/kuu/hls-parser#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "ava": "^0.25.0",
    "babel-loader": "^8.0.0",
    "coveralls": "^3.0.2",
    "nsp": "^3.2.1",
    "nyc": "^13.0.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "xo": "^0.22.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "capitalized-comments": 0,
      "dot-notation": 0,
      "new-cap": 0,
      "no-cond-assign": 0,
      "no-mixed-operators": 0,
      "no-multi-assign": 0,
      "import/no-dynamic-require": 0,
      "unicorn/filename-case": 0
    }
  }
}
